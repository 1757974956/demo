/* pages/message/message.wxss */
page{
 background-color: #f1f1f1;
}
.card{
 background-color: #fff;
 border: 1rpx solid #ccc;
 border-radius: 10rpx;
 margin: 60rpx 20rpx;
 padding: 20rpx 30rpx;
 display: flex;
 flex-direction: column;
}
.card .card-title{
  font-size: 20px;
  font-weight: bolder;
  margin-bottom: 20rpx;
}
.card .card-data{
  font-size: 12px;
  color: #ccc;
  border-bottom: 1px solid #ccc;
  margin-bottom: 2prpx;
  padding-bottom: 20rpx;
}
.card .card-img{
  width: 100%;
  height: 300rpx;
  margin-top:20rpx;
}
.card .card-desc{
  font-size: 16px;
  color: #333;
  border-bottom: 1px solid #ccc;
  margin: 20rpx 0px;
  padding-bottom: 20rpx;
}
.card .caed-read{
  font-size: 14px;
  color: #666;

}
