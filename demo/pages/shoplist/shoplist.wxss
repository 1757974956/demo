/* pages/shoplist/shoplist.wxss */

page {
  background-color: #fff;
}

.shop {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  position: relative;
}

.shop .shop-img {
  width: 400rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.shop .shop-title {
  font-size: 16px;
  font-weight: bold;
  color: #000;
}

.shop .shop-address {
}

.shop .shop-time {
}

.shop .shop-start {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  /* position: relative; */
}

.shop .shop-info {
  width: 520px;
  display: flex;
  flex-direction: column;
  font-size: 12px;
  color: #ccc;
  line-height: 2;
}

.shop-start .shop-start-after {
  color: #e2e2e2;
}

.shop-start .shop-start-before {
  position: absolute;
  left: 0;
  top: 0;
  color: #f60;
  /* width: 90%; */
  overflow: hidden;
}

.ell {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
